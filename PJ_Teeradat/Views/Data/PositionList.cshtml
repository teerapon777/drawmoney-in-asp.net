@model IEnumerable<PJ_Teeradat.Models.TbPosition>

@{
    ViewData["Title"] = "PositionList";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
@{ if (ViewBag.UserType == "2")
    {
        <h2>รายการหน่วยงาน</h2>

        <p>
            <a asp-action="CreatePosition">เพิ่มข้อมูล</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ชื่อตำแหน่ง
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PositionName)
                        </td>
                        <td>
                            <a asp-action="EditPosition" asp-route-id="@item.PositionId">แก้ไข้</a> |
                            @Html.ActionLink("ลบ", "DeletePosition", new { id = item.PositionId },
                                      new { onclick = "return confirm('คุณต้องการลบ y/n')" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>คุณไม่มีสิทธิ์การใช้งานหน้านี้</h2>
    }

}