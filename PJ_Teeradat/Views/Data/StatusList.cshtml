@model IEnumerable<PJ_Teeradat.Models.TbStatus>

@{
    ViewData["Title"] = "StatusList";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
@{ if (ViewBag.UserType == "2")
    {
        <h2>รายการสถานะ</h2>

        <p>
            <a asp-action="CreateStatus">เพิ่มข้อมูล</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        สถานะ
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusName)
                        </td>
                        <td>
                            <a asp-action="EditStatus" asp-route-id="@item.StatusId">แก้ไข</a> |
                            @Html.ActionLink("ลบ", "DeleteStatus", new { id = item.StatusId },
                      new { onclick = "return confirm('คุณต้องการลบ y/n')" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>คุณไม่มีสิทธิ์การใช้งานหน้านี้</h2>
    }

}