@model PJ_Teeradat.Models.TbDepartment

@{
    ViewData["Title"] = "CreateDep";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}
@{ if (ViewBag.UserType == "2")
    {
        <h2>เพิ่มข้อมูล</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateDep">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DepartmentName" class="control-label">ชื่อหน่วยงาน/คณะ</label>
                        <input asp-for="DepartmentName" class="form-control" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="เพิ่มข้อมูล" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="DepList">กลับสู่เมนู</a>
        </div>

    }
    else
    {
        <h2>คุณไม่มีสิทธิ์การใช้งานหน้านี้</h2>
    }

}